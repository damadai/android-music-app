<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/art"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:src="@drawable/evolve" />

    <TextView
        android:id="@+id/artist"
        style="@style/Widget.BigTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:textColor="#ffff"
        tools:text="Imagine Dragons" />

    <TextView
        android:id="@+id/song"
        style="@style/Widget.Title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="#ffff"
        android:textSize="15sp"
        tools:text="Whatever It Takes" />

    <TextView
        android:id="@+id/duration"
        style="@style/Widget.NumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_medium"
        android:textColor="#ffff"
        android:textSize="17sp"
        tools:text="2:30" />

    <TextView
        android:id="@+id/share"
        style="@style/Widget.BigTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_big"
        android:text="@string/share_action"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/like"
        style="@style/Widget.BigTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_big"
        android:text="@string/like_action"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/history"
        style="@style/Widget.BigTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_big"
        android:text="@string/remove_action"
        android:textColor="#ffff" />
</LinearLayout>